---
import { getTranslations } from "../utils/i18n";
import ExperienceComponent from "./Experience.astro";
import { IconType } from "./TecnologyBox.astro";

const { lang } = Astro.props;
const translations = getTranslations(lang);

const EXPERIENCES: { time?: string; title: string; company: string; tecnologies: IconType[]; description: string; icon?: any }[] = [
    {
        company: "Inxeption",
        title: translations.inxeption_job,
        description: translations.inxeption_description,
        time: `${translations.jun}. 2021 - ${translations.aug}. 2024`,
        tecnologies: ["nodejs", "react", "prisma", "graphql"],
    },
    {
        company: "Tech and Solve",
        title: translations.tech_job,
        description: translations.tech_description,
        time: `${translations.jun}. 2019 - ${translations.may}. 2021`,
        tecnologies: ["csharp", "azure", "devops"],
    },
    {
        company: "DELOIM",
        title: translations.deloim_job,
        description: translations.deloim_description,
        time: `${translations.oct}. 2016 - ${translations.jun}. 2019`,
        tecnologies: ["csharp", "terraform", "angular", "azure", "aws", "xamarin"],
    },
    {
        company: "Aplisalud",
        title: translations.aplisalud_job,
        description: translations.aplisalud_description,
        time: `${translations.dec}. 2015 - ${translations.oct}. 2016`,
        tecnologies: ["csharp"],
    },
];
---

<ol class="relative md:border-s md:border-gray-200 dark:border-gray-700">
    {EXPERIENCES.map((x) => <ExperienceComponent company={x.company} description={x.description} title={x.title} time={x.time} tecnologies={x.tecnologies} />)}
</ol>
