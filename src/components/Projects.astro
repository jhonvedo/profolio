---
import NodeIcon from './icons/nodejs.astro';
import CsharpIcon from './icons/c-sharp.astro';
import AngularSingleIcon from './icons/angular-single.astro';
import PrismaIcon from './icons/prisma.astro';
---

<div class="flex flex-col md:flex-row md:items-start space-x-6">
    <div class="md:w-2/3">
        <div id="animation-carousel" class="relative w-full" data-carousel="static">           
            <div class="relative h-56 overflow-hidden rounded-lg md:h-96">               
                <div class="hidden duration-200 ease-linear" data-carousel-item>
                    <img src="./projects/sectorial_dashboard.webp" class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="...">
                </div>
                <div class="hidden duration-200 ease-linear" data-carousel-item>
                    <img src="./projects/sectorial_dashboard_2.webp" class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="...">
                </div>
                <div class="hidden duration-200 ease-linear" data-carousel-item>
                    <img src="./projects/sectorial_universe.webp" class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="...">
                </div> 
            </div>           
            <button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
                <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                    <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
                    </svg>
                    <span class="sr-only">Previous</span>
                </span>
            </button>
            <button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
                <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                    <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                    </svg>
                    <span class="sr-only">Next</span>
                </span>
            </button>
        </div>
    </div>

    <div class="flex flex-col md:w-1/3 pt-7">
        <span class="pb-5 font-semibold text-action text-2xl">
            <a href="https://www.sectorial.co/lanzamiento_oda/" target="_blank">ODA Oraganization Data Assistant</a>
        </span>
        <span class="text-sm">Plataforma que implementa instrumentos de analítica avanzada y visualización de datos, que te permitirá interactuar con tu sector de forma dinámica, oportuna y ordenada.</span>
        <div class="flex items-center flex-wrap space-x-3  pt-4">
            <span class="bg-slate-500 rounded-lg py-1 px-2 text-sm flex space-x-1  my-2 mx-1">
                <NodeIcon class="size-5 text-green-400"/>
                <span>NodeJS</span>
            </span>
            <span class="bg-slate-500 rounded-lg py-1 px-2 text-sm flex space-x-1  my-2 mx-1">
                <CsharpIcon class="size-5 text-violet-600"/>
                <span>C#/NetCore</span>
            </span>
            <span class="bg-slate-500 rounded-lg py-1 px-2 text-sm flex space-x-1  my-2 mx-1">
                <AngularSingleIcon class="size-5 text-red-600"/>
                <span>Angular</span>
            </span>
            <span class="bg-slate-500 rounded-lg py-1 px-2 text-sm flex space-x-1  my-2 mx-1">
                <PrismaIcon class="size-5"/>
                <span>Prisma</span>
            </span>
        </div>       

    </div>
</div>