---
import Layout from "../layouts/Layout.astro";
import Experiences from "../components/Experiences.astro";
import AboutMe from "../components/AboutMe.astro";
import Profile from "../components/Profile.astro";
import Projects from "../components/Projects.astro";
---

<Layout title="Jhon Acevedo">
    <main class="px-4 lg:w-3/5 mx-auto w-full" id="home">
        
        <nav class="fixed w-full z-20 top-0 start-0 bg-[#182838] hidden md:block">
            <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
                <a class="flex items-center space-x-3 rtl:space-x-reverse"></a>
                <div class="flex lg:order-2 space-x-3 lg:space-x-0 rtl:space-x-reverse"> </div>
                
                <div class="items-center justify-between hidden w-full lg:flex lg:w-auto lg:order-1" id="navbar-sticky">
                    <ul class="flex flex-col p-4 lg:p-0 mt-4 font-medium border rounded-lg lg:space-x-8 rtl:space-x-reverse lg:flex-row lg:mt-0 lg:border-0">
                        <li class="px-2"><a href="#home">Inicio</a></li>
                        <li class="px-2"><a href="#aboutme">Sobre Mi</a></li>
                        <li class="px-2"><a href="#experience">Experiencia</a></li>
                        <!-- <li class="px-2"><a href="#project">Proyectos</a></li> -->        
                    </ul>
                </div>
            </div>
        </nav>

        <div class="mx-auto h-screen lg:w-9/12 flex flex-col lg:items-center justify-center">
            <Profile />           
        </div>

        <div class="md:pt-16 mt-10 lg:min-w-full mx-auto" id="aboutme">
            <h3 class="flex items-center mb-6 text-2xl font-semibold gap-x-3 border-b-2 border-action md:border-b-0">              
                Sobre Mi
            </h3>
            <AboutMe/>
        </div>

        <div class="md:pt-16 mt-10 lg:min-w-full mx-auto" id="experience">
            <h3 class="flex items-center mb-6 text-2xl font-semibold gap-x-3  border-b-2 border-action md:border-b-0">
                <!-- <BriefCaseIcon class="size-7" /> -->
                Experiencia
            </h3>
            <Experiences />
        </div>

        <div class="md:pt-16 mt-10">
            <h3 id="project" class="flex items-center mb-6 text-2xl font-semibold gap-x-3  border-b-2 border-action md:border-b-0">                      
                Proyectos
            </h3>
            <Projects/>
        </div>
        
    </main>

    <style>
        main {
            margin: auto;
            padding: 1rem;
            /* width: 800px; */
            max-width: calc(100% - 2rem);
            color: white;
            font-size: 20px;
            line-height: 1.6;
        }
    </style>
</Layout>
