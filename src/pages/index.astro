---
import Base from "@/layouts/Base.astro";
import "@/styles/globals.css";
---

<Base lang="es">
    <main class="min-h-screen flex items-center justify-center px-6 py-24">
        <div class="mx-auto max-w-2xl text-center">
            <h1 class="text-3xl font-bold">Elige tu idioma · Choose your language</h1>
            <div class="mt-8 flex items-center justify-center gap-4">
                <a href="/es" class="rounded-xl bg-gradient-to-r from-blue-600 to-indigo-600 px-6 py-3 text-sm font-semibold shadow-lg shadow-blue-600/20">Español</a>
                <a href="/en" class="rounded-xl border border-white/10 px-6 py-3 text-sm font-semibold">English</a>
            </div>
        </div>
    </main>
</Base>
